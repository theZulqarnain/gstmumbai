</div>
<script>
    $(function() {
        $('.edit').froalaEditor({

            imageUploadURL: '/admin/pages/upload_image',
            imageUploadParams: {
                id: 'my_editor'
            },

            fileUploadURL: '/admin/pages/upload_file',
            fileUploadParams: {
                id: 'my_editor'
            },

            imageManagerLoadURL: '/admin/pages/load_images',
            imageManagerDeleteURL: "/admin/pages/delete_image",
            imageManagerDeleteMethod: "POST"
        })
        // Catch image removal from the editor.
            .on('froalaEditor.image.removed', function (e, editor, $img) {
                $.ajax({
                    // Request method.
                    method: "POST",

                    // Request URL.
                    url: "/admin/pages/delete_image",

                    // Request params.
                    data: {
                        src: $img.attr('src')
                    }
                })
                    .done (function (data) {
                        console.log ('image was deleted');
                    })
                    .fail (function (err) {
                        console.log ('image delete problem: ' + JSON.stringify(err));
                    })
            })

            // Catch image removal from the editor.
            .on('froalaEditor.file.unlink', function (e, editor, link) {

                $.ajax({
                    // Request method.
                    method: "POST",

                    // Request URL.
                    url: "/admin/pages/delete_file",

                    // Request params.
                    data: {
                        src: link.getAttribute('href')
                    }
                })
                    .done (function (data) {
                        console.log ('file was deleted');
                    })
                    .fail (function (err) {
                        console.log ('file delete problem: ' + JSON.stringify(err));
                    })
            })
    });
</script>

